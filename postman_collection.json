{
  "info": {
    "name": "STA Back - Basic",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Test\", \"email\": \"test@example.com\", \"password\": \"password\" }"
        },
        "url": { "raw": "http://localhost:8000/api/register", "host": ["http://localhost:8000"], "path": ["api","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"email\": \"test@example.com\", \"password\": \"password\" }"
        },
        "url": { "raw": "http://localhost:8000/api/login", "host": ["http://localhost:8000"], "path": ["api","login"] }
      }
    }
    ,
    {
      "name": "Create Service",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"City Tour\", \"identifier\": \"city-tour-10\", \"details\": {\"duration\": \"3h\"} }"
        },
        "url": { "raw": "http://localhost:8000/api/provider/services", "host": ["http://localhost:8000"], "path": ["api","provider","services"] }
      }
    },
    {
      "name": "Update Service",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"City Tour - Updated\" }"
        },
        "url": { "raw": "http://localhost:8000/api/provider/services/10", "host": ["http://localhost:8000"], "path": ["api","provider","services","10"] }
      }
    },
    {
      "name": "Delete Service",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/provider/services/10", "host": ["http://localhost:8000"], "path": ["api","provider","services","10"] }
      }
    }
  ]
}
